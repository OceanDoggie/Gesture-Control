{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "noEmit": false,
    "lib": ["ES2022"],
    "types": ["node"]
  },
  "include": ["server/**/*.ts", "shared/**/*.ts"]
}

